# Stargirl Course Platform - Environment Variables
# Copy this file to .env and fill in your values

# ========================================
# Frontend Configuration (Vite)
# ========================================
VITE_ANTHROPIC_API_KEY=your-anthropic-api-key

# ========================================
# Backend Configuration (Flask)
# ========================================

# Flask Settings
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Google Sheets Integration
GOOGLE_SHEETS_ID=1XNK4awgGvqhwyoiUT4_tfYpNduVSxnPM82a-LJXSOos
GOOGLE_CREDENTIALS_FILE=/app/credentials/service-account.json

# Admin API Key (for backend management)
API_KEY=your-admin-api-key-here

# CORS Configuration (not needed in Docker, handled by nginx proxy)
CORS_ORIGINS=*

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=86400

# Server Configuration
HOST=0.0.0.0
PORT=5005

# PMA System API Configuration (for employee login)
PMA_API_URL=https://pma.heyuangroup.com
DEFAULT_COMPANY_NAME=和源通信

# Token Expiration (seconds)
# Regular login: 24 hours
JWT_ACCESS_TOKEN_EXPIRES=86400
# Remember me: 30 days
JWT_REMEMBER_TOKEN_EXPIRES=2592000
